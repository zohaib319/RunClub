<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:alpha="0.9">

    <TextView
        android:text="@string/step_2"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/step_2"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="@string/step2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="#ffffff"

        android:layout_alignBottom="@+id/step_2"
        android:layout_toRightOf="@+id/step_2"
        android:layout_toEndOf="@+id/step_2" />

    <TextView
        android:text="@string/event_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/step_2"
        android:layout_alignLeft="@+id/step_2"
        android:layout_alignStart="@+id/step_2" />

    <Button
        android:text="@string/event_typehint"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:id="@+id/btn_eventtype"
        android:background="#ffffff"
        android:drawableRight="@drawable/arrowdown"
        android:paddingLeft="-100dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="34dp"
        android:ems="10"

        android:layout_below="@+id/textView9"
         />

    <TextView
        android:text="@string/fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="13dp"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/btn_eventtype"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:text="@string/fee_hint"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:id="@+id/btn_fee"
        android:background="#ffffff"
        android:drawableRight="@drawable/arrowdown"
        android:paddingLeft="-50dp"
        android:paddingRight="20dp"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="@string/event_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="13dp"
        android:id="@+id/textView11"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/btn_fee"
        android:layout_alignLeft="@+id/btn_fee"
        android:layout_alignStart="@+id/btn_fee" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="@string/event_detailshint"
        android:ems="10"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="13dp"
        android:id="@+id/editText"
        android:background="#ffffff"
        android:paddingTop="-10dp"
        android:paddingLeft="5dp"
        />

    <Button
        android:text="@string/btn_next"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:textAllCaps="true"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_marginTop="13dp"
        />

    <Button
        android:text="@string/invite_friends"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/button3"
        android:background="@drawable/button_border"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />


</RelativeLayout>